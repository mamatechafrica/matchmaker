  </div>
  
  <a href="#sign-up" class="btn btn-outline-primary mt-4">Get Started</a>
</section>

<section class="container my-5">

<!-- Mentee Card -->     
  <div class="row"> 
    <h2>Featured Mentees</h2> 
    <% @mentees.each do |mentee| %>   
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <%= mentee.name %>
            </div>
            <div class="card-image">
              <% if mentee.image? %>
                <%= image_tag mentee.image.url, class: 'card-img-top' %>
              <% end %>
            </div>
            <div class="card-body">
              <p><strong><i class="bi bi-person-circle"></i></strong> <%= mentee.bio %></p>
              <p><strong>Area of Interest: </strong><%= mentee.areas_of_interest %></p>
            </div>
            <div class="card-footer">
              <%= link_to 'View Profile', mentee_path(mentee), class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
        <% end %>
    </div>

<!-- Mentor Card -->
    <div class="row">
      <h2>Featured Mentors</h2>
      <% @mentors.each do |mentor| %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <%= mentor.name %>
            </div>
            <div class="card-image">
              <% if mentor.image? %>
                <%= image_tag mentor.image.url, class: 'card-img-top' %>
              <% end %>
            </div>
            <div class="card-body">
              <p><strong><i class="bi bi-person-circle"></i></strong> <%= mentor.bio %></p>
              <p><strong>Expertise: </strong><%= mentor.expertise %></p>
            </div>
            <div class="card-footer">
              <%= link_to 'View Profile', mentor_path(mentor), class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</section>

<section class="container text-center my-5 pb-2">
  <h2>Join Our Community of Women in Tech</h2>
  <p>Whether you're looking for guidance or want to share your expertise, we have a place for you.</p>
  <a href="#" class="btn btn-primary">Sign Up Now</a>
</section>